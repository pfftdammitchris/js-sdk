{
  "parser": "babel-eslint",
  "extends": "eslint:recommended",
  "plugins": [
    "babel",
    "mocha"
  ],
  "env": {
    "node": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "array-bracket-spacing": [
      2,
      "always"
    ],
    "array-callback-return": 1,
    "arrow-parens": 2,
    "arrow-spacing": 1,
    "callback-return": 1,
    "key-spacing": [2, { "beforeColon": false, "afterColon": true }],
    "comma-dangle": [
      2,
      "never"
    ],
    "dot-notation": 1,
    "dot-location": [
      2,
      "property"
    ],
    "eol-last": 2,
    "handle-callback-err": 1,
    "indent": [
      "error",
      2,
      { "SwitchCase": 1 }
    ],
    "jsx-quotes": [
      2,
      "prefer-double"
    ],
    "new-parens": 1,
    "no-await-in-loop": 1,
    "no-console": 0,
    "no-debugger": 0,
    "no-else-return": 1,
    "no-extra-parens": 1,
    "no-floating-decimal": 1,
    "no-implicit-coercion": 0,
    "no-mixed-spaces-and-tabs": 1,
    "no-multi-spaces": 1,
    "no-multiple-empty-lines": 1,
    "no-path-concat": 1,
    "no-return-await": 1,
    "no-trailing-spaces": 1,
    "no-unneeded-ternary": 1,
    "no-unused-vars": [
      2,
      { "ignoreRestSiblings": true }
    ],
    "no-useless-call": 1,
    "no-useless-constructor": 1,
    "no-useless-return": 1,
    "no-var": 2,
    "no-with": 1,
    "vars-on-top": 1,
    "object-curly-spacing": [
      2,
      "always"
    ],
    "template-curly-spacing": [
      "error",
      "never"
    ],
    "prefer-promise-reject-errors": 1,
    "prefer-template": 1,
    "quotes": [
      2,
      "single",
      "avoid-escape"
    ],
    "mocha/no-exclusive-tests": "error",
    "mocha/no-identical-title": "error",
    "mocha/no-nested-tests": "error",
    "semi": [
      2,
      "never"
    ],
    "space-before-blocks": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      {
        "anonymous": "always",
        "named": "never"
      }
    ],
    "space-in-parens": [
      "error",
      "never"
    ],
    "strict": 0,
    "yoda": 1
  }
}
